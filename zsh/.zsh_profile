alias vim="nvim"

bindkey -s ^f "tmux-sessionizer\n"

export GOPATH=$HOME/.local/go

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

addToPathFront $HOME/.local/bin
addToPathFront $HOME/.local/go/bin
addToPathFront /usr/local/go/bin
