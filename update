#!/usr/bin/env bash

commit_msg="${1:-lil buhb forgor commit msg hehehaw}"

pushd env/nvim
if ! git diff --quiet . || ! git diff --cached --quiet .; then
    git add .
    git commit -m "$commit_msg"
    git push
fi
popd

if ! git diff --quiet . || ! git diff --cached --quiet .; then
    git add .
    git commit -m "$commit_msg"
    git push
fi
